---
import ContentSection from "~/components/content-section.astro";
import ProjectCard from "~/components/project-card.astro";
import { getShowcase } from "~/data/showcase";

const sites = await getShowcase();
---

<ContentSection title="Projects" id="projects">
  <Fragment slot="lead">
    <p class="text-lg">
      I've worked on a variety of projects, from small personal sites to large
      enterprise applications. Here are a few of my favorites.
    </p>
  </Fragment>
  <div class="max-w-6xl space-y-2">
    <div class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3">
      {sites.map((site) => <ProjectCard site={site} />)}
    </div>
  </div>
</ContentSection>
